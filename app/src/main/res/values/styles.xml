<resources>
    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="RatingBar_Yellow_Small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_yellow_small</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="RatingBar_Yellow_Middle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_yellow_middle</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
    <style name="RatingBar_Yellow_Large" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_yellow_middle</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>
</resources>
