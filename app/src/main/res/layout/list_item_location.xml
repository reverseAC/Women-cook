<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    app:elevation="1dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/spacing_small"
    android:padding="@dimen/spacing_medium">
    <ImageView
        android:id="@+id/restaurant_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/recipe"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_small"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/restaurant_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="荔枝餐厅(西直门店)"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_small" />
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_marginLeft="4dp"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:rating="3.5"
                android:stepSize="0.1"
                android:numStars="5"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:ellipsize="end"
                android:text="523"
                android:lineSpacingExtra="@dimen/spacing_small"
                android:maxLines="3"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_xxsmall"
                android:layout_toRightOf="@+id/rating_bar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:ellipsize="end"
                android:text="条评价"
                android:lineSpacingExtra="@dimen/spacing_small"
                android:maxLines="3"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_xxsmall"
                android:layout_toRightOf="@+id/comment_count"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/average_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:ellipsize="end"
                android:text="人均76元"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:lineSpacingExtra="@dimen/spacing_small"
                android:maxLines="3"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_xxsmall" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:ellipsize="end"
                android:text="烧烤 火锅"
                android:lineSpacingExtra="@dimen/spacing_small"
                android:maxLines="3"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_xxsmall" />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:ellipsize="end"
                android:text="交大东路"
                android:layout_toRightOf="@+id/keyword"
                android:lineSpacingExtra="@dimen/spacing_small"
                android:maxLines="3"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_xxsmall" />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:ellipsize="end"
                android:text="3.4km"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:lineSpacingExtra="@dimen/spacing_small"
                android:maxLines="3"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_xxsmall" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>